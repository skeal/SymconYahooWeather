{
  "elements":
  [
    { "type": "ValidationTextBox", "name": "YWHTown", "caption": "Name der Stadt" },
    { "type": "IntervalBox", "name": "YWHIntervall", "caption": "Millisekunden" },
	{ "type": "Select", "name": "YWHTemperature", "caption": "Temperaturanzeige",
		"options": [
			{ "label": "Celsius", "value":"c" },
			{ "label": "Fahrenheit", "value":"f" }
		]
	},
	{ "type": "Select", "name": "YWHDays", "caption": "Anzeige Tage",
		"options": [
			{ "label": "1 Tag anzeigen (min)", "value":"1" },
			{ "label": "2 Tage anzeigen", "value":"2" },
			{ "label": "3 Tage anzeigen", "value":"3" },
			{ "label": "4 Tage anzeigen", "value":"4" },
			{ "label": "5 Tage anzeigen (max)", "value":"5" }
		]
	},
	{ "type": "Select", "name": "YWHDisplay", "caption": "Anzeige HTMLBox",
		"options": [
			{ "label": "Bild und Text", "value":"1" },
			{ "label": "Nur Bild", "value":"2" },
			{ "label": "Nur Text", "value":"3" }
		]
	},
	{ "type": "IntervalBox", "name": "YWHImageZoom", "caption": "Bild-Zoom (%)" }
  ], 
  "actions":
  [

    { "type": "Button", "label": "Update", "onClick": "YWH_Update($id);" }

  ]
}